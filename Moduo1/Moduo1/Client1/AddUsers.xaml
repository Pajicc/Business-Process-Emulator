<Window x:Class="Client1.AddUsers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client1"
        mc:Ignorable="d"
        Title="AddUsers" Height="300" Width="300">
    <Grid>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="39,59,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="username_addUser" HorizontalAlignment="Left" Height="23" Margin="125,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding UsernameAddUser}"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="39,115,0,0" VerticalAlignment="Top" />
        <TextBox HorizontalAlignment="Left" Height="22" Margin="125,119,0,0" VerticalAlignment="Top" Width="120" x:Name="password" Text="{Binding PasswordAddUser}"/>
        <Button Content="Add User" HorizontalAlignment="Left" Margin="42,214,0,0" VerticalAlignment="Top" Width="75" Command="{Binding AddUser}"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="181,214,0,0" VerticalAlignment="Top" Width="75" Command="{Binding CloseWindow}"/>
        <Label Content="Add User in Database" HorizontalAlignment="Left" Margin="78,10,0,0" VerticalAlignment="Top" Width="127"/>
    </Grid>
</Window>
